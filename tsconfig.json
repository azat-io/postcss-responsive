{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2020",
    "lib": ["esnext"],
    "types": ["node"],
    "allowJs": false,
    "module": "es6",
    "outDir": "dist",
    "strict": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./dist/"]
}
